
  {{#each surveys as |survey|}}
<div class="card" data-id="{{survey.id}}">
   <div class="card-body col-sm-2 col-med-2">
    <div class="form-group">
      <label for="survey-question-{{survey.id}}">Survey Question</label>
      <input type="text" class="form-control" id="survey-question-{{survey.id}}" name="survey[question]" placeholder="Question" value="{{survey.question}}" required>
    </div>
    <div class="show-options col-xs-12 response-message">
      <form class="response-message">
        <fieldset>
          <legend> Please respond to the survey</legend>
          <input type="radio" name="response" value="Yes">Yes
          <br>
          <input type="radio" name="response" value="No">No
        </fieldset>
        <button type="submit" class="btn btn-default view-result" data-class="view-response" data-id='{{response.id}}'>View Response!</button>
        <button type="submit" class="btn btn-default take-survey" data-class="take-survey" data-id='{{survey.id}}'>Take the Survey!</button>

      </form>
    </div>

</div>
</div>
{{/each}}
